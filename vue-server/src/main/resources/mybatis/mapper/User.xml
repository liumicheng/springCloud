<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bgg.vueserver.dao.LoginDao">
    <select id="get" parameterType="com.bgg.vueserver.entity.User" resultType="int">
        select count(*) from user_login where username = #{userName} and password = #{passWord};
    </select>

    <insert id="add" parameterType="com.bgg.vueserver.entity.User">
        insert into user_login(userName,passWord) value (#{userName},#{passWord});
    </insert>

    <select id="getUserName" parameterType="com.bgg.vueserver.entity.User" resultType="int">
        select count(*) from user_login where userName = #{userName};
    </select>

</mapper>

